<div class="w-full flex flex-col items-center space-y-4">
  <%= simple_form_for @tool do |f| %>
    <div class="flex flex-col items-center space-y-4">
      <%= f.input :name, label: 'Tool Name', input_html: {class: 'block'} %>
      <%= f.input :brand_name, label: 'Tool Brand', input_html: {class: 'block'} %>
      <%= f.submit class: 'w-3/5 btn' %>
    </div>
  <% end %>
</div>
