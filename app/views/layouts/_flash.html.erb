<div 
  data-controller="notification"
  data-notification-delay-value="1500"
  class="transition transform duration-1000 hidden"
  data-transition-enter-from="opacity-0 -translate-y-6"
  data-transition-enter-to="opacity-100 translate-y-0"
  data-transition-leave-from="opacity-100 translate-y-0"
  data-transition-leave-to="opacity-0 -translate-y-6"
  >
  <% flash.each do |type, msg| %>
    <div class='w-full h-0 flex justify-center'>
      <% bg_class = type == 'notice' ? 'bg-emerald-300' : 'bg-pink-300' %>
      <div class='z-10 relative justify-between h-fit rounded-md items_center p-4 -my-8 mx-auto w-2/3 xl:w-1/3 <%= bg_class %>' data-turbo-temporary='true'>
        <button class='absolute top-1 right-3' data-action="notification#hide">&times;</button>
        <p class='text-sm xl:text-base py-2 w-full text-center font-semibold'>
          <%= msg %>
        </p>
      </div>
    </div>
  <% end %>
</div>
